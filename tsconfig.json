{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "CommonJS",
      "target": "ES2022",
      "lib": ["es2022"],
      "sourceMap": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowJs": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@app/*": ["src/app/*"],
        "@data/*": ["src/data/*"],
        "@domain/*": ["src/domain/*"],
        "@infra/*": ["src/infra/*"],
        "@presentation/*": ["src/presentation/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  